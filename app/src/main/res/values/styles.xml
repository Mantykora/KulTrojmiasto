<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="AppTheme.Home">
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--<item name="android:fontFamily">@font/dancing_script_bold</item>-->
        <!--<item name="android:textSize">30sp</item>-->
        <!--<item name="android:windowTitleStyle">@style/TitleStyle</item>-->
        <item name="android:textAppearance">@style/TextAppeareance</item>


    </style>

    <style name="TextAppeareance" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:fontFamily">@font/dancing_script_bold</item>

        <item name="android:textColor">#ffff0000</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="checkBoxStyle">
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CalendarDatePickerSpinner" parent="@android:style/Widget.Material.DatePicker">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:datePickerMode">spinner</item>




    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:colorControlActivated">#ffea00</item>
        . . .
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>



</resources>
